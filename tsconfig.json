{
  "compileOnSave": true,
  "compilerOptions": {
    /* 基础配置 */
    "incremental": true,
    "allowJs": true,
    "target": "ESNext",
    "lib": ["DOM", "esnext", "DOM.Iterable"],
    "removeComments": true,
    "declaration": true,
    "sourceMap": true,
    "preserveConstEnums": false,
    "downlevelIteration": true,
    "strictNullChecks": false,
    /* 强类型检查配置 */
    "noImplicitAny": false,
    /* 模块分析配置 */
    "baseUrl": ".",
    "outDir": "./lib",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
